				    	app.root.get_screen('main').refreshList(app.root.get_screen('main').ids.songlist)
				ClickableImage:
					id: play1
					source: ''
					size_hint: 0.05, 1
					disabled: True
					on_release: 
						root.playSong(1)
			BoxLayout:
