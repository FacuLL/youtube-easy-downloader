<LinkScreen>:
	name: "link"
	BoxLayout:
		orientation: 'vertical'
		BoxLayout:
			canvas:
		    	Color:
		        	rgba: 200 / 255., 0 / 255., 0 / 255., 1
		        Rectangle:
		            pos: self.pos
		            size: self.size
		    size_hint: 1, 0.15
		    Button:
		    	text: 'Go back'
		    	size_hint: 0.2, 1
		    	on_release:
		    		app.root.current = "main"
			    	root.manager.transition.direction = 'right'
			Label:
				text: 'Youtube Link'
				font_size: 25
		BoxLayout:
			orientation: 'horizontal'
			canvas:
		    	Color:
		        	rgba: 255 / 255., 255 / 255., 255 / 255., 1
		        Rectangle:
		            pos: self.pos
		            size: self.size
		    size_hint: 1, 0.2
		    Label:
				size_hint: 0.065, 1
				text: ''
			TextInput:
				id: link
				size_hint: 0.65, 0.7
				pos_hint: {'center_x': .5, 'center_y': .5}
				text: ''
			Label:
				size_hint: 0.02, 1
				text: ''
			Button:
				size_hint: 0.2, 0.7
				pos_hint: {'center_x': .5, 'center_y': .5}
				text: 'Get song'
				font_size:15
				on_release: 
					root.getLink(link)
					root.manager.transition.direction = 'right'
					app.root.get_screen('main').refreshList(app.root.get_screen('main').ids.songlist)
			Label:
				size_hint: 0.065, 1
				text: ''
		BoxLayout:
			orientation: 'vertical'
			canvas:
		    	Color:
		        	rgba: 255 / 255., 255 / 255., 255 / 255., 1
		        Rectangle:
		            pos: self.pos
		            size: self.size
		    Label:
		    	id: linkerror
		    	text:''
		    	color: 0,0,0,1

<EditScreen>:
	name: 'editname'
	BoxLayout:
		orientation:'vertical'
		BoxLayout:
			canvas:
		    	Color:
		        	rgba: 200 / 255., 0 / 255., 0 / 255., 1
		        Rectangle:
		            pos: self.pos
		            size: self.size
		    size_hint: 1, 0.25
		BoxLayout:
			orientation:'horizontal'
			canvas:
		    	Color:
		        	rgba: 200 / 255., 0 / 255., 0 / 255., 1
		        Rectangle:
		            pos: self.pos
		            size: self.size
		    size_hint: 1, 0.1
		    Button:
		    	text: 'Go back'
		    	size_hint: 0.2, 1
		    	on_release:
		    		app.root.current = "main"
			    	root.manager.transition.direction = 'left'
			Label:
				text: 'Edit song name'
				font_size: 25
		BoxLayout:
			orientation:'horizontal'
			canvas:
		    	Color:
		        	rgba: 255 / 255., 255 / 255., 255 / 255., 1
		        Rectangle:
		            pos: self.pos
		            size: self.size
		    size_hint: 1, 0.1
			Label:
				text:'Song Id'
				color: 0,0,0,1
			TextInput:
				id: editsongid
				text: ''
		BoxLayout:
			orientation:'horizontal'
			canvas:
				Color:
					rgba: 255 / 255., 255 / 255., 255 / 255., 1
				Rectangle:
					pos: self.pos
					size: self.size
			size_hint: 1, 0.1
			Label:
				text:'New Name'
				color: 0,0,0,1
			TextInput:
				id: editsongname
				text: ''
		Button:
			text: 'Edit name'
			size_hint: 1, 0.1
			on_release:
				root.manager.transition.direction = 'left'
				root.editName(editsongid, editsongname)
				app.root.get_screen('main').refreshList(app.root.get_screen('main').ids.songlist)
		BoxLayout:
			canvas:
		    	Color:
		        	rgba: 200 / 255., 0 / 255., 0 / 255., 1
		        Rectangle:
		            pos: self.pos
		            size: self.size
			size_hint: 1, 0.1
			Label:
				id: editerror
				text: ''
				color: 0,0,0,1
		BoxLayout:
			canvas:
		    	Color:
		        	rgba: 200 / 255., 0 / 255., 0 / 255., 1
		        Rectangle:
		            pos: self.pos
		            size: self.size
		    size_hint: 1, 0.35

<DeleteScreen>:
	name: 'delete'
	BoxLayout:
		orientation:'vertical'
		BoxLayout:
			canvas:
		    	Color:
		        	rgba: 200 / 255., 0 / 255., 0 / 255., 1
		        Rectangle:
		            pos: self.pos
		            size: self.size
		    size_hint: 1, 0.25
		BoxLayout:
			orientation:'horizontal'
			canvas:
		    	Color:
		        	rgba: 200 / 255., 0 / 255., 0 / 255., 1
		        Rectangle:
		            pos: self.pos
		            size: self.size
		    size_hint: 1, 0.1
		    Button:
		    	text: 'Go back'
		    	size_hint: 0.2, 1
		    	on_release:
		    		app.root.current = "main"
			    	root.manager.transition.direction = 'left'
			Label:
				text: 'Delete song from list'
				font_size: 25
		BoxLayout:
			orientation:'horizontal'
			canvas:
		    	Color:
		        	rgba: 255 / 255., 255 / 255., 255 / 255., 1
		        Rectangle:
		            pos: self.pos
		            size: self.size
		    size_hint: 1, 0.1
			Label:
				text:'Song Id'
				color: 0,0,0,1
			TextInput:
				id: deletesongid
				text: ''
		Button:
			text: 'Delete song'
			size_hint: 1, 0.1
			on_release:
				root.manager.transition.direction = 'left'
				root.deleteSong(deletesongid)
				app.root.get_screen('main').refreshList(app.root.get_screen('main').ids.songlist)
		BoxLayout:
			canvas:
		    	Color:
		        	rgba: 200 / 255., 0 / 255., 0 / 255., 1
		        Rectangle:
		            pos: self.pos
		            size: self.size
			size_hint: 1, 0.1
			Label:
				id: deleteerror
				text: ''
				color: 0,0,0,1
		BoxLayout:
			canvas:
		    	Color:
		        	rgba: 200 / 255., 0 / 255., 0 / 255., 1
		        Rectangle:
		            pos: self.pos
		            size: self.size
		    size_hint: 1, 0.45

